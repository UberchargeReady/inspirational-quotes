<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuoteTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="AuthorTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
    </style>

    <style name="RootButtonStyle">
        <item name="android:minWidth">88dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ApiLevelButtonStyle" parent="RootButtonStyle">
        <item name="android:background">@null</item>
    </style>
    
    <style name="ButtonNextStyle" parent="ApiLevelButtonStyle">

    </style>

    <style name="ButtonPreviousStyle" parent="ApiLevelButtonStyle">

    </style>
    
    <style name="NotifyDailyStyle">

    </style>

</resources>
